<Window x:Class="Activity_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Activity_Manager"
        mc:Ignorable="d"
        Title="Activity Manager" Height="500" Width="800">

    <DockPanel x:Name="PanelDepart" Background="#FFBEBEBE">
        <Menu x:Name="Menu" DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Import"/>
                <MenuItem Header="Export"/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem Header="Option" />
                <MenuItem Header="About" Click="About_Click" />
            </MenuItem>
        </Menu>

        <ToolBar x:Name="ToolBar" DockPanel.Dock="Top">
            <Button Name="Creer" Width="65" Content="Créer"/>
            <Button Name="Supprimer" Width="65" Content="Supprimer"/>
            <Button Name="Modifier" Width="65" Content="Modifier"/>
        </ToolBar>

        <Grid x:Name="GridGauche" Background="#BF967878" Width="395" Height="385" VerticalAlignment="Top">
            <Label x:Name="LabelActivite" Content="Créer une activité" FontSize="20" VerticalAlignment="Top" Height="40"/>
            <Label x:Name="Intitule" Content="Intitulé" VerticalAlignment="Top" Height="25" Margin="0,40,0,0"/>
            <TextBox x:Name="TextIntitule" VerticalAlignment="Top" Height="20" Margin="0,65,0,0"/>
            <Label x:Name="Description" Content="Description" VerticalAlignment="Top" Height="25" Margin="0,85,0,0"/>
            <TextBox x:Name="TextDescription" VerticalAlignment="Top" Height="20" Margin="0,110,0,0"/>
            <Label x:Name="Lieu" Content="Lieu" VerticalAlignment="Top" Height="25" Margin="0,130,0,0"/>
            <TextBox x:Name="TextLieu" VerticalAlignment="Top" Height="20" Margin="0,155,0,0"/>
            <Label x:Name="DateDebut" Content="Date Début" VerticalAlignment="Top" Height="25" Margin="0,175,0,0"/>
            <TextBox x:Name="TextDateDebut" VerticalAlignment="Top" Height="20" Margin="0,200,0,0"/>
            <Label x:Name="DateFin" Content="Date Fin" VerticalAlignment="Top" Height="25" Margin="0,220,0,0"/>
            <TextBox x:Name="TextDateFin" VerticalAlignment="Top" Height="20" Margin="0,245,0,0"/>
            <Label x:Name="Occurences" Content="Occurences" VerticalAlignment="Top" Height="25" Margin="0,265,0,0"/>
            <TextBox x:Name="TextOccurences" VerticalAlignment="Top" Height="20" Margin="0,290,0,0"/>
            <Label x:Name="Periodicite" Content="Periodicité" VerticalAlignment="Top" Height="25" Margin="0,310,0,0"/>
            <ComboBox x:Name="BoxPeriodicite" VerticalAlignment="Top" Height="20" Margin="0, 335,0,0">
                <ComboBoxItem Content="Quotidienne"/>
                <ComboBoxItem Content="Hebdomadaire"/>
                <ComboBoxItem Content="Mensuelle"/>
                <ComboBoxItem Content="Annuelle"/> 
            </ComboBox>
        </Grid>

        <Grid x:Name="GridSplitter" VerticalAlignment="Top" >
            <GridSplitter x:Name="GridSplitterCentre" Width="5"/>
        </Grid>

        <Grid x:Name="GridDroite" Background="#A5967878" VerticalAlignment="Top">
            <ListBox x:Name="ListBox" Background="#A5967878" Width="395"> 
                <ListBoxItem>Test</ListBoxItem>
                <ListBoxItem>Test</ListBoxItem>
            </ListBox> 
        </Grid>

<!--        <Grid x:Name="GridBas" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            
        </Grid> --> 
    </DockPanel>
</Window>
